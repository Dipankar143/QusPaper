<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/yellow"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context="com.quspaper.quspaper.cbsc_sub2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Hindi"
                android:paddingTop="25dp"
                android:background="@color/upper_text"
                android:textSize="30dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="30dp"
                android:onClick="cbsc_class10th_hindi"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/upper_text"
                android:text="English"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="25dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:onClick="cbsc_class10th_english"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/upper_text"
                android:text="Mathematics"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="25dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:onClick="cbsc_class10th_math"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/upper_text"
                android:text="Science"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="25dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:onClick="cbsc_class10th_science"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/upper_text"
                android:text="Social Science"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingTop="25dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:onClick="cbsc_class10th_sst"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>